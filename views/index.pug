extends layout

block spinner 
  .preloader 
    .spinner

block content
  .d-flex(class="flex-row justify-content-end align-items-start")
    .login-title-area
      h1= title
      .auth-form
        .auth-head
          a
            img(src="assets/img/RS_NEW_LOGO.svg" width="100px")
          form(class="form-area" id="login" action="/signin" method="post")       
            label(class="form-label ") Email
            input(class="form-control" type='email' name='email')
            .mt-25
            label(class="form-label ") Password
            input(class="form-control" type='password' name='password')
            .text-align-end
              button(class="btn btn-primary") Login
            .foot
              p &nbsp;
    .side-image-area